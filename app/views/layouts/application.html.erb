  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
<!--****************************** 下記を追加 ****************************-->
<% if user_signed_in? %>
  <div class="logout_wrapper">
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  </div>
<% end %>
<!--**********************************************************************-->  
  
<!--***************** 下記を追加 ****************-->
<p class="notice"><%= notice %></p>
<!--*********************************************-->
<%= yield %>

</body>
</html>
